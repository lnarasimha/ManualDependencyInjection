<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SampleRepository" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/gray_spanish</item>
        <item name="colorSecondaryVariant">@color/black_charcoal</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="PullRequestTitle">
        <item name="android:textSize">@dimen/text_16</item>
        <item name="android:textColor">@color/black</item>
        <item name="lineHeight">@dimen/text_18</item>
        <item name="fontFamily">@font/lexend_semibold</item>
        <item name="android:layout_marginLeft">@dimen/margin_16</item>
    </style>

    <style name="PullRequestSubTitle">
        <item name="android:textSize">@dimen/text_14</item>
        <item name="android:textColor">@color/black_charcoal</item>
        <item name="lineHeight">@dimen/text_14</item>
        <item name="fontFamily">@font/lexend_medium</item>
        <item name="android:layout_marginTop">@dimen/margin_4</item>
    </style>

    <style name="PullRequestLabel">
        <item name="android:textSize">@dimen/text_12</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/lexend_medium</item>
        <item name="android:background">@drawable/background_round_grey</item>
        <item name="android:padding">@dimen/margin_4</item>
        <item name="android:layout_marginStart">@dimen/margin_16</item>
        <item name="android:layout_marginTop">@dimen/margin_4</item>
    </style>

    <style name="PullRequestLabelValue">
        <item name="android:textSize">@dimen/text_12</item>
        <item name="android:textColor">@color/black_charcoal</item>
        <item name="fontFamily">@font/lexend_semibold</item>
        <item name="android:layout_marginStart">@dimen/margin_4</item>
    </style>
</resources>
